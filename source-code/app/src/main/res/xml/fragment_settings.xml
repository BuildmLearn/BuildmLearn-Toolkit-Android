<!DOCTYPE PreferenceScreen [<!ELEMENT PreferenceScreen (PreferenceCategory)*><!ATTLIST PreferenceScreenxmlns:android CDATA #REQUIRED><!ELEMENT PreferenceCategory (CheckBoxPreference|com.afollestad.materialdialogs.prefs.MaterialEditTextPreference|Preference)*><!ATTLIST PreferenceCategoryandroid:title CDATA #REQUIRED><!ELEMENT CheckBoxPreference (#PCDATA)><!ATTLIST CheckBoxPreferenceandroid:checked CDATA #IMPLIEDandroid:key CDATA #REQUIREDandroid:summary CDATA #REQUIREDandroid:title CDATA #REQUIRED><!ELEMENT com.afollestad.materialdialogs.prefs.MaterialEditTextPreference (#PCDATA)><!ATTLIST com.afollestad.materialdialogs.prefs.MaterialEditTextPreferenceandroid:dialogMessage CDATA #REQUIREDandroid:dialogTitle CDATA #REQUIREDandroid:digits CDATA #REQUIREDandroid:key CDATA #REQUIREDandroid:lines CDATA #REQUIREDandroid:maxLines CDATA #REQUIREDandroid:summary CDATA #REQUIREDandroid:title CDATA #REQUIRED><!ELEMENT Preference (#PCDATA)><!ATTLIST Preferenceandroid:key CDATA #REQUIREDandroid:summary CDATA #REQUIREDandroid:title CDATA #REQUIRED>]>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/project_settings">

        <CheckBoxPreference
            android:key="@string/key_developer_mode"
            android:summary="@string/summary_developer_mode"
            android:title="@string/developer_mode" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/app_settings">

        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:dialogMessage="@string/summary_developer_mode"
            android:dialogTitle="@string/title_user_name"
            android:digits="abcdefghijklmnopqrstuvxyzABCDEFGHIJLMNOPRSTUVXYZ "
            android:key="@string/key_user_name"
            android:lines="1"
            android:maxLines="1"
            android:summary="@string/summary_developer_mode"
            android:title="@string/your_name" />

        <Preference
            android:key="@string/key_delete_temporary_files"
            android:summary="@string/summary_temp_files"
            android:title="@string/delete_temp_files" />
        <CheckBoxPreference
            android:checked="false"
            android:key="@string/key_auto_save"
            android:summary="@string/title_auto_save"
            android:title="@string/summary_auto_save" />
    </PreferenceCategory>

</PreferenceScreen>
