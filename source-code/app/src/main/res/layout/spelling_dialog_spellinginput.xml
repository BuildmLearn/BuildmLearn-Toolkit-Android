<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin_spell"
        android:paddingLeft="@dimen/activity_vertical_margin_spell"
        android:paddingRight="@dimen/activity_vertical_margin_spell"
        android:paddingTop="@dimen/activity_vertical_margin_spell"
        android:text="@string/enter_spelling"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/et_spelling"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="textFilter|textNoSuggestions|textVisiblePassword"
        android:paddingBottom="@dimen/activity_vertical_margin_spell"
        android:paddingLeft="@dimen/activity_vertical_margin_spell"
        android:paddingRight="@dimen/activity_vertical_margin_spell"
        android:paddingTop="@dimen/activity_vertical_margin_spell"
        android:maxLines="1" />

    <Button
        android:id="@+id/btn_submit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin_spell"
        android:paddingLeft="@dimen/activity_vertical_margin_spell"
        android:paddingRight="@dimen/activity_vertical_margin_spell"
        android:paddingTop="@dimen/activity_vertical_margin_spell"
        android:text="@string/submit_spell"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorAccent_spell" />

</LinearLayout>