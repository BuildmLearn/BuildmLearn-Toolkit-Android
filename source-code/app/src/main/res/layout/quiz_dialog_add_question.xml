<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        style="@style/TextView.Caption.Light"
        android:text="@string/quiz_new_question"
        android:textColor="@color/black_secondary_text" />

    <EditText
        android:id="@+id/quiz_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_author"
        android:inputType="textPersonName" />

    <TextView
        style="@style/TextView.Caption.Light"
        android:text="@string/quiz_new_question_answer"
        android:textColor="@color/black_secondary_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/quiz_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/quiz_option_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quiz_option_hint_1"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/quiz_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/quiz_option_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quiz_option_hint_2"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/quiz_radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/quiz_option_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quiz_option_hint_3"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/quiz_radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/quiz_option_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quiz_option_hint_4"
            android:inputType="textPersonName" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>